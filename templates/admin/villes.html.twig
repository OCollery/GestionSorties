{% extends 'base.html.twig' %}

{% block title %}
    Gérer les villes
{% endblock %}

{% block body %}

    <h1>Gérer les villes</h1>

    <h2>Filtrer les villes</h2>

    <input type="search" name="ville" id="ville">

    <form action="" class="search">
        bouton
    </form>
    <br>

    <div class="tableau">
        <table cellspacing="0" cellpadding="1" border="1" width="500" >
            <tr style="color:white;background-color:grey">
                <th>Ville</th>
                <th>Code postal</th>
                <th>Actions</th>
            </tr>
            {% for v in villes %}
                <div class="villes">
                    <tr>
                        <td>{{ v.nomVille }}</td>
                        <td>{{ v.codePostal }}</td>
                        <td><a href="{{ path('admin_deleteVille', {'id': v.id}) }}">Supprimer</a></td>
                    </tr>
                </div>
            {% endfor %}
            <tr>
                {{ form_start(formVille) }}
                <td>{{ form_widget(formVille.nomVille) }}</td>
                <td>{{ form_widget(formVille.codePostal) }}</td>
                <td><button type="submit">Ajouter</button></td>
                {{ form_end(formVille) }}
            </tr>
        </table>
    </div>
    </td>
    </tr>
    </table>
    </div>

{% endblock %}