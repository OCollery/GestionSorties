<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir.com{% endblock %}</title>

        <link rel="stylesheet" href="{{ asset('app.css') }}">

        {% block stylesheets %}{% endblock %}

        {% block javascripts %}{% endblock %}
    </head>
    <body>
    <header>
        <a href="{{ path('home') }}" title="sortir.com | Home"><img src="{{ asset('img/logo.png') }}">Sortir.com</a>

        {% include('inc/nav.html.twig') %}
    </header>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <main>
        {% block main %}{% endblock %}
    </main>
    <footer></footer>
        {% block body %}{% endblock %}
    </body>
</html>
