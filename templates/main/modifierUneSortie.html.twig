{% extends 'base.html.twig' %}

{% block title %} Modifier sortie | {{ parent() }}{% endblock %}

{% block main %}

<h1>Modifier une sortie</h1>

    {{ form_start(updateForm) }}
    {{ form_widget(updateForm) }}


    <label>Rue: {{lieux.rue}}</label><br>
    <label>Code postal: {{ lieux.noVille.codePostal}}</label><br>
    <label>Latitude: </label><input type="text"><br>
    <label>Longitude: </label><input type="text"><br>
<br>
    <button type="submit">Enregister</button>
    <button><a href="{{ path('publier',{'id':sorties.id}) }}"> Publier la sortie</a></button>
    <button><a href="{{ path('delete_sortie',{'id':sorties.id})}}">Supprimer la sortie</a></button>
    <button><a href="{{ path('home') }}">Annuler modification</button>
    <button><a href="{{ path('raison_annulation',{'id':sorties.id}) }}"> Annuler la sortie</a></button>
{{ form_end(updateForm) }}


{% endblock %}