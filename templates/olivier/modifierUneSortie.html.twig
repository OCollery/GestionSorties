{% extends 'base.html.twig' %}

{% block title %} Modifier sortie | {{ parent() }}{% endblock %}

{% block main %}

    <h1>Modifier une sortie</h1>

    {{ form_start(updateForm) }}
    {{ form_widget(updateForm) }}


    <label>Rue: {{lieux.rue}}</label><br>
    <label>Code postal: {{ lieux.noVille.codePostal}}</label><br>
    <label>Latitude: </label><input type="text"><br>
    <label>Longitude: </label><input type="text"><br>
    <br>
    <button type="submit">Enregister</button>

    {{ form_end(updateForm) }}
    <form action="{{ path('publier',{'id':sorties.id}) }}">
        <button>Publier la sortie</button>
    </form>
    <form action="{{ path('delete_sortie',{'id':sorties.id})}}">
        <button>Supprimer la sortie</button>
    </form>
    <form action="{{ path('home') }}">
        <button>Annuler modification</button>
    </form>
    <form action="{{ path('raison_annulation',{'id':sorties.id}) }}">
        <button>Annuler la sortie</button>
    </form>

{% endblock %}