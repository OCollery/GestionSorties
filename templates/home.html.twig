{%  extends 'base.html.twig' %}

{% block main %}
    <h2>Date du jour : {{ "now" | date('d/m/Y') }}</h2>
    <h2>Participant : {{ app.user.prenom }} {{ app.user.nom | slice(0,1)}}. </h2>


    <button name="Rechercher" type="submit" >Rechercher</button>


    <table>
        <tr>
            <th>Nom de la sortie</th>
            <th>Date de la sortie</th>
            <th>Cloture</th>
            <th>inscrits/places</th>
            <th>Etat</th>
            <th>Inscrit</th>
            <th>Organisateur</th>
            <th>Actions</th>
        </tr>
        {# affiche la liste des sorties #}
        {% for sortie in sorties %}
        <tr>
            <td> {{ sortie.nom }} </td>
            <td> {{ sortie.dateHeureDebut | date('d/m/Y')}} </td>
            <td> {{ sortie.datelimiteInscription| date('d/m/Y') }} </td>
            <td> {{ sortie.participants |length }} / {{ sortie.nbInscriptionsMax }} </td>
            <td> {{ sortie.etat.libelle }} </td>
            <td> {% for s in sortie.participants %}
                    {% if(s.id == app.user.id) %} X {% endif %}
                 {% endfor %}
            </td>
            <td> {{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom }} </td>
            <td> Je ferai cela plus tard, trop de if </td>
        </tr>
        {%  endfor %}
    </table>

    <a href="{{ path('creer_sortie') }}"><button>Cr√©er une sortie</button></a>
{% endblock %}

{% block title %}Our series | {{ parent() }} {% endblock %}